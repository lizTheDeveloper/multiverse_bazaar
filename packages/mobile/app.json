{
  "expo": {
    "name": "Multiverse Bazaar",
    "slug": "multiverse-bazaar",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "multiverse-bazaar",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#6366f1"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.multiversebazaar.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Multiverse Bazaar needs camera access to take photos for your projects and profile.",
        "NSPhotoLibraryUsageDescription": "Multiverse Bazaar needs photo library access to select images for your projects and profile."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#6366f1"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.multiversebazaar.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "googleServicesFile": "./google-services.json"
    },
    "plugins": [
      "expo-secure-store",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#6366f1"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Multiverse Bazaar needs photo library access to select images for your projects and profile.",
          "cameraPermission": "Multiverse Bazaar needs camera access to take photos for your projects and profile."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
