# Multiverse Bazaar API - Environment Configuration
# Copy this file to .env and fill in your values

# Server Configuration
# Port number for the HTTP server (default: 3000)
PORT=3000

# Node environment: development, production, or test
NODE_ENV=development

# Database Configuration
# PostgreSQL connection URL
# Format: postgresql://username:password@host:port/database
# Example: postgresql://bazaar_user:password123@localhost:5432/multiverse_bazaar
DATABASE_URL=postgresql://user:password@localhost:5432/multiverse_bazaar

# JWT Authentication
# Secret key for signing JWT tokens
# IMPORTANT: Generate a secure random string (minimum 32 characters, 64+ recommended for production)
# You can generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Expiration time for access tokens (examples: 15m, 1h, 24h)
JWT_EXPIRES_IN=15m

# Expiration time for refresh tokens (examples: 7d, 30d, 90d)
REFRESH_TOKEN_EXPIRES_IN=7d

# CORS Configuration
# Comma-separated list of allowed origins for cross-origin requests
# Development example: http://localhost:3000,http://localhost:3001
# Production example: https://app.multiversebazaar.com,https://www.multiversebazaar.com
CORS_ORIGINS=http://localhost:3000

# File Upload Configuration
# Directory path for storing uploaded files (relative or absolute)
UPLOAD_DIR=./uploads

# Maximum file size in bytes (default: 5242880 = 5MB)
# Examples:
#   1MB = 1048576
#   5MB = 5242880
#  10MB = 10485760
MAX_FILE_SIZE=5242880
